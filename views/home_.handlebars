
{{#contentFor 'head'}}
<style type="text/css">
  .mentor-card {
    background-color: #ffffff;
    margin: 15px 10px;
    box-shadow: 3px 3px 15px #d8d8d8;
    border-radius: 10px;
    overflow: hidden;
  }
  .mentor-card .header {
    display: grid;
    padding: 5px;
    grid-template-columns: 65px auto; /* FIXME should we hardcode 65px ? */
    grid-template-rows: auto auto 25px; /* ==  .contact-icon img.height */
    grid-template-areas:
      "image name"
      "image bio"
      "contact-links bio";
    grid-column-gap: 10px;
    color: #ffffff;
    background-color: #1D3557;
  }
  .mentor-card .header .profile-image {
    grid-area: image;
    justify-self: center;
    width: 75%;
    border-radius: 50%;
  }
  .mentor-card .header .name {
    grid-area: name;
  }
  .mentor-card .header .contact-links {
    max-height: 100%;
    grid-area: contact-links;
    align-self: end;
  }
  .contact-icon {
    display: inline-block;
    width: 20px;
    height: 20px;
    padding: 5px 5px 0;
  }
  .contact-icon img {
    width: 100%;
  }
  .mentor-card .header .bio {
    grid-area: bio;
    color: #d8d8d8;
    font-size: 0.7rem;
  }
  .mentor-card .tweet {
    padding: 10px;
    font-size: 0.85rem;
    min-height: 120px;
    border: 1px solid #d2d2d2;
    border-radius: 0 0 10px 10px;
  }
  @media screen and (min-width: 481px) {
    .mentor-card .header .profile-image {
      transform: translateY(-35px);
    }
    .mentor-card {
      display: grid;
      grid-template-columns: 250px auto;
      margin: 30px 15px;
      border-radius: 0;
      overflow: visible;
    }
    .mentor-card .header .bio {
      grid-column: 1 / -1;
      font-size: 0.8rem;
    }
    .mentor-card .header .profile-image {
      width: 100%;
    }
    .mentor-card .header {
      grid-template-areas:
      "image contact-links"
      "name name"
      "bio bio";
      grid-template-columns: 70px auto;
      grid-template-rows: 35px auto; /* 70px - this = translate */
      grid-gap: 10px;
      padding: 15px;
    }
    .mentor-card .header .contact-links {
      align-self: auto;
      justify-self: right;
    }
    .contact-icon {
      width: 20px;
      height: 20px;
      padding: 0;
      margin-left: 5px;
    }
    .mentor-card .tweet {
      font-size: 1rem;
      padding: 15px;
      border: 0;
      border-radius: 0;
    }
  }
</style>
{{/contentFor}}

{{#each mentors}}
  <div class="mentor-card">
    <div class="header">
      <img class="profile-image" src="{{profile_image}}" />
      <h4 class="name long">
        <a class="profile-link" href="{{twitter_url}}" rel="noopener noreferrer" target="_blank">{{full_name}}</a>
      </h4>
      <div class="bio">{{bio}}</div>
      <div class="contact-links">
        {{#if website}}
          <a class="contact-icon" title="website" href="{{website}}" rel="noopener noreferrer" target="_blank">
            <img src="/static/images/www.png" />
          </a>
        {{/if}}
        <a class="contact-icon" title="twitter" href="{{twitter_url}}" rel="noopener noreferrer" target="_blank">
          <img src="/static/images/twitter.svg" />
        </a>
      </div>
    </div>
    <div class="tweet">{{{tweet}}}</div>
  </div>
{{/each}}
